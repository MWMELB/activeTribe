<div class="container my-5 px-4 pb-4">
  <div class="row">
    <div class="col">
      <h1><%= @group.name %></h1>
      <p><%= @group.description %></p>

      <% if policy(@group).destroy? %>
      <p>
        <%= link_to "Delete", @group, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this group?" }%>
      </p>
      <% else %>
      <p><%= link_to "Join us!", "#" %></p>
      <% end %>
    </div>
  </div>
</div>

<div class="container mt-5 px-4">
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="profile-info text-center">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class:"avatar-large avatar-bordered" %>
          <h2 class="mt-3"><%= "#{@user.first_name.capitalize} #{@user.last_name.capitalize}" %></h2>
        </div>
      </div>

      <div class="profile-group-info card p-3">
        <h4>Groups I'm part of</h4>
        <% @user.groups.each do |group| %>
          <ul>
            <li><%= link_to group.name.titleize, group_path(group) %></li>
          </ul>
        <% end %>
      </div>

      <div class="profile-activity-info card p-3">
        <h4>Activities I'm running</h4>
        <% @user.activities.each do |activity| %>
          <ul>
            <li><%= link_to activity.title.titleize, activity_path(activity) %></li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>

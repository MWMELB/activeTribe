<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="login-form p-4 shadow-sm rounded">
        <h2 class="text-center mb-5">Log In</h2>

        <%= form_with(scope: :user, url: session_path(:user), local: true) do |f| %>
          <!-- Email Field -->
          <div class="mb-4">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, class: "form-control form-input", placeholder: "Enter your email" %>
          </div>

          <!-- Password Field -->
          <div class="mb-4">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-input", placeholder: "Enter your password" %>
          </div>

          <!-- Remember Me Checkbox -->
          <div class="form-check mb-4">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, "Remember me", class: "form-check-label" %>
          </div>

          <!-- Log In Button -->
          <div class="d-grid">
            <%= f.submit "Log In", class: "btn btn-dark btn-lg w-100" %>
          </div>
        <% end %>

        <div class="text-center mt-4">
          <%= link_to "Sign up", new_user_registration_path, class: "link-primary" %> |
          <%= link_to "Forgot your password?", new_user_password_path, class: "link-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>

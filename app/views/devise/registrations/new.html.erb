<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="signup-form p-4 shadow-sm rounded">
        <h2 class="text-center mb-5">Enter your email to join us.</h2>

        <%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>
          <!-- Email Input -->
          <div class="mb-4">
            <%= f.email_field :email, autofocus: true, class: "form-control form-input", placeholder: "email@example.com" %>
          </div>

          <!-- Agreement Checkbox -->
          <div class="form-check mb-4">
            <%= f.check_box :terms, class: "form-check-input" %>
            <%= f.label :terms, "I agree to activeTribe's Privacy Policy and Terms of Use", class: "form-check-label" %>
          </div>

          <!-- Continue Button -->
          <div class="text-center">
            <%= f.submit "Continue", class: "btn btn-dark btn-lg w-100" %>
          </div>
        <% end %>

        <!-- Sign In Link -->
        <div class="text-center mt-4">
          <p>Already have an account? <%= link_to "Log in", new_session_path(resource_name), class: "link-primary" %></p>
        </div>
      </div>
    </div>
  </div>
</div>

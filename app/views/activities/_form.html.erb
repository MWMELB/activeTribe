<%= simple_form_for(@activity) do |f| %>
  <div class="activity-form-box ">
    <h4>Event info</h4>
    <%= f.input :title, label: "Title", placeholder: "Enter event title", input_html: { class: "form-input" } %>

    <%= f.input :category,
                label: "Activity Type",
                collection: Activity::ACTIVITY_TYPES,
                prompt: "Select an activity",
                input_html: { class: "form-select" } %>

    <%= f.input :level,
                as: :select,
                collection: Activity.levels.keys.map { |level| [level.titleize, level] },
                label: "Activity Level",
                include_blank: "Select Level",
                input_html: { class: "form-control" } %>

    <%= f.input :description, placeholder: "Enter a short description", input_html: { class: "form-input" } %>

    <%= f.input :price, input_html: { class: "form-input" } %>

    <%= f.input :capacity, step: "10", input_html: { class: "form-input" } %>
  </div>

  <div class="activity-form-box">
    <h4>Date and Location</h4>
    <%= f.input :start,
                label: "Start Date and Time",
                as: :string,
                input_html: { data: { controller: "datepicker" }, class: "form-input" } %>

    <%= f.input :duration, label: "Duration (minutes)", placeholder: "Enter duration", input_html: { class: "form-input" } %>

    <%= f.input :location,
                placeholder: "Enter location",
                input_html: { data: {address_autocomplete_target: "address"}, class: "form-input" },
                wrapper_html: { data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]} } %>
  </div>

  <div class="activity-form-box p-8 mx-auto">
    <%= f.input :photo, as: :file, label: "Upload a Photo", input_html: { class: "form-file" } %>
  </div>

  <%= f.button :submit, class: "btn-submit mt-2" %>
<% end %>

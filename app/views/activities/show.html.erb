<div class="my-5">
  <div class="my-5">
  <div class="activity-photo-container">
    <% if @activity.photo.attached? %>
      <%= image_tag @activity.photo, class: "w-100 activity-card-image-banner", style: "height: 415px;"  %>
    <% else %>
      <p class="text-center text-muted">No photo available</p>
    <% end %>

    <h1 class="activity-title-overlay"><%= @activity.title %></h1>
  </div>

  <div class="container mt-4 px-4 pb-4">

        <h5><%= @activity.title %></h5>
        <div class="d-flex justify-content-between my-4 show-buttons">
          <% if policy(@activity).owner? %>
            <%= link_to "Back to My Activities", my_activities_path(@activity.user.username), class: "btn btn-secondary me-2" %>
          <% else %>
            <%= link_to "Back to Activities", activities_path, class: "btn btn-secondary me-2" %>
          <% end %>

          <div>
            <% if policy(@activity).owner? %>
              <div class="d-flex pt-2">
                <%= link_to '<i class="fa-solid fa-pen"></i>'.html_safe, edit_activity_path(@activity), class: "btn-icon me-3" %>
                <%= link_to '<i class="fa-regular fa-trash-can"></i>'.html_safe, @activity, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this activity?" }, class: "btn-icon" %>
              </div>
            <% elsif Booking.find_by(activity: @activity, user: current_user) %>
              <%= link_to "See my booking", bookings_path, class: "btn btn-info" %>
            <% else %>
              <%= button_to "Book Now", book_activity_path(@activity), method: :post, class: "btn btn-success" %>
            <% end %>
          </div>
        </div>


        <div style="width: 100%; height: 240px;"
          data-controller="map"
          data-map-marker-value="<%= @marker.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
        <p><%= @marker[:lat] %></p>

        <div class="card shadow-sm border-light">
          <div class="card-body">
            <p class="card-text"><strong>Organized by:</strong> <%= @activity.user.first_name %></p>
            <h5 class="card-text">Description</h5>
            <p class="card-text"><%= @activity.description %></p>
            <hr>
            <ul class="list-unstyled">
              <li><strong>Date & Time:</strong> <%= @activity.start.strftime("%A, %d %b %Y %l:%M %p") %></li>
              <li><strong>Duration:</strong> <%= format_duration(@activity.duration) %></li>
              <li><strong>Price:</strong> <%= format_price(@activity.price) %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

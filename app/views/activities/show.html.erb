<div class="my-5">
  <div>
    <% if @activity.photo.attached? %>
      <%= image_tag @activity.photo, class: "w-100 activity-card-image-banner" %>
    <% else %>
      <p>No photo available</p>
    <% end %>
  </div>
  <div class="container mt-4 px-4 pb-4">
    <div class="row justify-content-center">
      <div class="col">
        <h1 class="text-center mb-3"><%= @activity.title %></h1>
        <div class="d-flex justify-content-between my-4 show-buttons">
          <% if policy(@activity).owner? %>
            <%= link_to "Back to My Activities", my_activities_path(@activity.user.username), class: "btn btn-secondary me-2" %>
          <% else %>
            <%= link_to "Back to Activities", activities_path, class: "btn btn-secondary me-2" %>
          <% end %>
          <div>
            <% if policy(@activity).owner? %>
              <div class="d-flex pt-2">
                <%= link_to '<i class="fa-solid fa-pen"></i>'.html_safe, edit_activity_path(@activity), class: "px-3" %>
                <%= link_to '<i class="fa-regular fa-trash-can"></i>'.html_safe, @activity, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this activity?" } %>
              </div>
            <% elsif Booking.find_by(activity: @activity, user: current_user) %>
              <%= link_to "See my booking", bookings_path %>
            <% else %>
              <%= button_to "Book Now", book_activity_path(@activity), method: :post, class: "btn btn-success" %>
            <% end %>
          </div>
        </div>

        <div style="width: 100%; height: 240px;"
          data-controller="map"
          data-map-marker-value="<%= @marker.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
        <p><%= @marker[:lat] %></p>

        <div class="card shadow-sm">
          <div class="card-body">
            <p class="card-text"><strong>Organized by:</strong> <%= @activity.user.first_name %></p>
            <h5 class="card-text">Description</h5>
            <p class="card-text"><%= @activity.description %></p>
            <hr>
            <ul class="list-unstyled">
              <li><strong>Date & Time:</strong> <%= @activity.start.strftime("%A, %d %b %Y %l:%M %p") %></li>
              <li><strong>Duration:</strong> <%= format_duration(@activity.duration) %></li>
              <li><strong>Price:</strong> <%= format_price(@activity.price) %></li>
            </ul>
          </div>
        </div>

        <% if policy(@activity).owner? %>
          <div class="requests-tab mt-4">
            <h3>Booking requests</h3>
            <ul class="nav nav-tabs nav-fill" id="bookingRequestsTab" role="tablist">
              <li class="nav-item" role="presentation">
                <button class="nav-link active" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab" aria-controls="pending" aria-selected="true">Pending (<%= @pending_requests.count%>)</button>
              </li>
              <li class="nav-item" role="presentation">
                <button class="nav-link" id="accepted-tab" data-bs-toggle="tab" data-bs-target="#accepted" type="button" role="tab" aria-controls="accepted" aria-selected="false">Accepted</button>
              </li>
              <li class="nav-item" role="presentation">
                <button class="nav-link" id="declined-tab" data-bs-toggle="tab" data-bs-target="#declined" type="button" role="tab" aria-controls="declined" aria-selected="false">Declined</button>
              </li>
            </ul>

            <div class="tab-content" id="bookingRequestsTabContent">
              <div class="tab-pane fade show active mt-3" id="pending" role="tabpanel" aria-labelledby="pending-tab">
                <% if @pending_requests.any? %>
                  <% @pending_requests.each do |request| %>
                    <div class="card">
                      <div class="card-body">
                        <%= request.user.first_name %> has requested to join the <strong><%= request.activity.title %></strong>
                        <div class="d-flex justify-content-between">
                          <%= link_to "Accept", accept_booking_path(request), data: { turbo_method: :patch, turbo_confirm: "Are you sure you want to accept this booking?" } %>
                          <%= link_to "Decline", decline_booking_path(request), data: { turbo_method: :patch, turbo_confirm: "Are you sure you want to decline this booking?" } %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                <% else %>
                  <p>No pending requests.</p>
                <% end %>
              </div>
              <div class="tab-pane fade mt-3" id="accepted" role="tabpanel" aria-labelledby="accepted-tab">
                <% if @accepted_requests.any? %>
                  <% @accepted_requests.each do |request| %>
                    <div class="card">
                      <div class="card-body">
                        <%= request.user.first_name %> has joined <strong><%= request.activity.title %></strong>
                      </div>
                    </div>
                  <% end %>
                <% else %>
                  <p>No pending requests.</p>
                <% end %>
              </div>
              <div class="tab-pane fade mt-3" id="declined" role="tabpanel" aria-labelledby="declined-tab">
                <% if @declined_requests.any? %>
                  <% @declined_requests.each do |request| %>
                    <div class="card">
                      <div class="card-body">
                        <%= request.user.first_name %> has been declined from <strong><%= request.activity.title %></strong>
                      </div>
                    </div>
                  <% end %>
                <% else %>
                  <p>No declined requests.</p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

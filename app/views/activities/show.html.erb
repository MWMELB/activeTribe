<div class="my-5">
  <div class="my-5">
  <div class="activity-photo-container">
    <% if @activity.photo.attached? %>
      <%= image_tag @activity.photo, class: "w-100 activity-card-image-banner", style: "height: 415px;"  %>
    <% else %>
      <p class="text-center text-muted">No photo available</p>
    <% end %>

    <h1 class="activity-title-overlay"><%= @activity.title %></h1>
  </div>

  <div class="container mt-4 px-5 pb-4">

      <h5><%= @activity.title %></h5>
        <div class="d-flex justify-content-between ">
        <p class="show-text"><%= @activity.description %></p>
      </div>

       <hr>
            <div class="transparent-column">
            <ul class="list-unstyled">
              <li class="d-flex align-items-center">
                <i class="fa-solid fa-fire-flame-curved show-icon", style="margin-right: 12px; margin-left: 3px;"></i></i>
                <span>Snorkelling</span>
              </li>

              <li class="d-flex align-items-center">
                <i class="fas fa-trophy show-icon"></i>
                <span>Beginner Friendly</span>
              </li>
              <li class="d-flex align-items-center">

                <i class="fas fa-clock show-icon", style="margin-left: 1px;"></i>
                <span><%= @activity.start.strftime("%A, %d %b %Y %l:%M %p") %> <%= format_duration(@activity.duration) %></span>
              </li>
              <li class="d-flex align-items-center">

                <i class="fas fa-map-marker-alt show-icon", style="margin-right: 12px; margin-left: 2px;"></i>
                <span>Mornington Peninsula, Victoria</span>
              </li>
              <li class="d-flex align-items-center">

                <i class="fa-solid fa-circle-dollar-to-slot show-icon"></i>
                <span><%= format_price(@activity.price) %></span>
              </li>
            </ul>
          </div>
          </div>

          <div class="info-box">
            <h5 class="info-title">Important Information</h5>
            <p class="info-text">This is a placeholder text that can be replaced with your important information. Make sure to keep it concise and clear.</p>
          </div>

        <h5><%= @activity.title %></h5>
        <div class="d-flex justify-content-between my-4 show-buttons">
          <% if policy(@activity).owner? %>
            <%= link_to "Back to My Activities", my_activities_path(@activity.user), class: "btn btn-secondary me-2" %>
          <% else %>
            <%= link_to "Back to Activities", activities_path, class: "btn btn-secondary me-2" %>
          <% end %>


          <div class="card-body">
          <div>
            <% if policy(@activity).owner? %>
              <div class="d-flex pt-2">
                <%= link_to '<i class="fa-solid fa-pen"></i>'.html_safe, edit_activity_path(@activity), class: "btn-icon me-3" %>
                <%= link_to '<i class="fa-regular fa-trash-can"></i>'.html_safe, @activity, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this activity?" }, class: "btn-icon" %>
              </div>
            <% elsif Booking.find_by(activity: @activity, user: current_user) %>
              <%= link_to "See my booking", bookings_path, class: "btn btn-info" %>
            <% else %>
              <%= button_to "Book Now", book_activity_path(@activity), method: :post, class: "btn btn-secondary me-2 d-block w-100 rounded-button" %>
            <% end %>
          </div>


          <p class="card-text text-end"><strong>Organized by:</strong> <%= @activity.user.first_name %></p>
        </div>
        </div>

        <div class="container mt-4 px-3 pb-4">
        <h5 class="location">Location</h5>
        <div id="map" style="height: 400px; width: 100%;"></div>
      </div>
    </div>


      <script src="https://api.mapbox.com/mapbox-gl-js/v2.11.0/mapbox-gl.js"></script>

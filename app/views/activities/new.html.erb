<div class="container mt-4 p-4">
  <div class="row justify-content-center">
    <h1>Start your own adventure!</h1>
    <% if @activity.errors.any? %>
      <div class="alert alert-danger">
        <h4>There were errors:</h4>
        <ul>
          <% @activity.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= simple_form_for @activity do |f| %>
      <div class="activity-box p-3 my-3">
        <h3>Event overview</h3>
        <%= f.input :title,
                    label: "Title",
                    placeholder: "Enter title" %>
        <%= f.input :category,
                    label: "Sport",
                    placeholder: "Enter type" %>
        <%= f.input :description,
                    placeholder: "Description" %>
        <%= f.input :price %>
        <%= f.input :capacity, step: "10" %>
      </div>
      <div class="activity-box p-3">
        <%= f.input :start,
                    label: "Date and time" %>
        <%= f.input :duration,
                    label: "Duration (minutes)",
                    placeholder: "Enter duration" %>
        <%= f.input :location,
                    placeholder: "Enter location" %>
      </div>

        <div class="activity-box p-3 my-3">
          <%= f.input :photo, as: :file, label: "Upload a Photo" %>
        </div>

        <%= f.button :submit, class: "btn btn-dark w-100 mb-5" %>
      <% end %>
</div>
</div>

<div class="container mt-5 my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="activity-form p-4 shadow-sm rounded">
        <h2 class="text-left mb-5">Start your own adventure!</h2>


        <%= form_with model: @activity, local: true do |form| %>
          <div class="mb-4">
            <%= form.label :title, "Title", class: "form-label" %>
            <%= form.text_field :title, class: "form-control form-input", placeholder: "Enter activity title" %>
          </div>

          <div class="mb-4">
            <%= form.label :category, "Sport", class: "form-label" %>
            <%= form.text_field :sport, class: "form-control form-input", placeholder: "Enter sport" %>
          </div>

          <div class="mb-4">
            <%= form.label :description, "Description", class: "form-label" %>
            <%= form.text_area :description, rows: 4, class: "form-control form-input", placeholder: "Enter activity description" %>
          </div>

          <div class="mb-4">
            <%= form.label :location, "Location", class: "form-label" %>
            <%= form.text_field :location, class: "form-control form-input", placeholder: "Enter location" %>
          </div>

          <div class="mb-4">
            <%= form.label :start, "Date", class: "form-label" %>
            <%= form.date_field :start, class: "form-control form-input" %>
          </div>

          <div class="mb-4">
            <%= form.label :duration, "Duration (minutes)", class: "form-label" %>
            <%= form.number_field :duration, class: "form-control form-input", placeholder: "Enter duration" %>
          </div>

          <div class="mb-4">
            <%= form.label :price, "Price", class: "form-label" %>
            <%= form.number_field :price, class: "form-control form-input", placeholder: "Enter price" %>
          </div>

          <div class="d-grid">
            <%= form.submit "Create Activity", class: "btn btn-dark btn-lg w-100" %>
          </div>
        <% end %>

      </div>
    <% end %>

    <%= render "form", activity: @activity %>

  </div>
</div>
